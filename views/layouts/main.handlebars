                    <div class="sign-up-button">
                        {{#if this.user}}
                                <a href="/logout">Logout</a>
                        {{else}}
                                <a href="/login" class="mr-3">Login</a>
                                <a href="/signup" class="btn btn-primary">Sign Up</a>
